<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controller.HomeController">
    <children>
        <Label fx:id="welcomeLabel" layoutX="50" layoutY="50" text="Bienvenue" />

        <!-- Ajout de la barre de recherche -->
        <TextField fx:id="searchField" layoutX="50" layoutY="80" prefWidth="300" promptText="Entrez votre recherche ici..." />
        <Button layoutX="360" layoutY="80" text="Chercher" onAction="#handleSearch" />

        <WebView fx:id="webView" layoutX="50" layoutY="120" />
    </children>
</AnchorPane>
